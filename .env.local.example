# TrueHost API Configuration (Primary - Native Integration)
# Get your API key from TrueHost Kenya dashboard
TRUEHOST_API_KEY=your_truehost_api_key_here
TRUEHOST_API_URL=https://api.truehost.co.ke/v1

# Authentication & Domain Management
# The same API key is used for:
# - User authentication (login/signup)
# - Domain availability checking
# - Domain registration
# - Domain transfers

# Namecheap API Configuration (Fallback Option for Domains Only)
NAMECHEAP_API_KEY=your_api_key_here
NAMECHEAP_API_USER=your_username_here
NAMECHEAP_CLIENT_IP=your_ip_address_here

# Use sandbox for testing
NAMECHEAP_API_URL=https://api.sandbox.namecheap.com/xml.response

# For production:
# NAMECHEAP_API_URL=https://api.namecheap.com/xml.response

# Node Environment (automatically set by Next.js)
# In development mode, authentication works in demo mode without API
NODE_ENV=development
